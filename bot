def create_tables():
    conn = sqlite3.connect('transactions.db')
    c = conn.cursor()

    c.execute("""
        CREATE TABLE IF NOT EXISTS received (
            id INTEGER PRIMARY KEY,
            ticket_num TEXT
        )
    """)

    c.execute("""
        CREATE TABLE IF NOT EXISTS not_received (
            id INTEGER PRIMARY KEY,
            ticket_num TEXT
        )
    """)

    conn.commit()
    conn.close()

create_tables()


